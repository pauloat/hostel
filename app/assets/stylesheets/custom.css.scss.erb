@import "bootstrap-sprockets";
@import "bootstrap";

/* universal */

html {
  overflow-y: scroll;
}

body {
  color: #1f1f1f;
  background-image: url(<%= asset_path 'background.jpg' %>);
  background-attachment: fixed;
}

a {
  color: #00819b
}

a:hover {
  color: #00819b
}

.jumbotron >  hr {
  border-top-color: #1f1f1f;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

img {
  max-width: 100%
}

div.principal {
  float: left;
}

.grid {
  margin-left: auto;
  margin-right: auto;
  max-width: 950px;
  position: sticky;
}

.col-2-3 {
  float: left;
  width: 66.66%;
}

.col-1-3 {
  float: right;
  width: 33.33%;
}

.col-1 {
  float: right;
  width: 100%;
}

.jumbotron {
  background-color: #cac8ff;
  font-size: 1em;
}

.home img {
  float: left;
  padding: 10px 20px 20px 0px;
}

// to modify the gradient http://www.colorzilla.com/gradient-editor/#ffffff+45,ffffff+100&1+45,0+100;Custom
.gradient{
  background: -moz-linear-gradient(top,  hsla(0,0%,100%,1) 45%, hsla(0,0%,100%,0) 100%); /* FF3.6+ */

  background: -webkit-gradient(linear, left top, left bottom, color-stop(45%,hsla(0,0%,100%,1)), color-stop(100%,hsla(0,0%,100%,0))); /* Chrome,Safari4+ */

  background: -webkit-linear-gradient(top,  hsla(0,0%,100%,1) 45%,hsla(0,0%,100%,0) 100%); /* Chrome10+,Safari5.1+ */

  background: -o-linear-gradient(top,  hsla(0,0%,100%,1) 45%,hsla(0,0%,100%,0) 100%); /* Opera 11.10+ */

  background: -ms-linear-gradient(top,  hsla(0,0%,100%,1) 45%,hsla(0,0%,100%,0) 100%); /* IE10+ */

  background: linear-gradient(to bottom,  hsla(0,0%,100%,1) 45%,hsla(0,0%,100%,0) 100%); /* W3C */

  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#00ffffff',GradientType=0 ); /* IE6-9 */

}

/* typography */

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
  color: #1f1f1f;
}

h3 {
  font-size: 1.5em;
  letter-spacing: -1px;
  margin-bottom: 10px;
  margin-top: 0px;
  text-align: left;
}

p {
  font-size: 1em;
  line-height: 1.3em;
  color: #1f1f1f;
}

/* header */

header.container {
  position: sticky;
  margin-left: auto;
  margin-right: auto;
  max-width: 970px;
  width: 100%;
}

.banner {
  max-width: 1000px;
  width: 100%;
}

.banner img{
  border-radius: 15px;
  width: 100%;
  max-width: 950px;
  margin-top: 10px;
  margin-left: auto;
  margin-right: auto;

}

.header .jumbotron{
  padding: 10px;
  width: 100%
}

li {
  margin-left: auto;
  margin-right: auto;
}
.jumbotron p {
  font-size: 1em;
  font-weight: normal;
  margin-bottom: auto;
  max-width: 640px;
}
/* main */

.main .jumbotron {
  padding: 20px 35px 20px 35px;
}

/* sidebar*/

.sidebar {
  position: sticky;
  height:100%;
  float: right;
}

.sidebar .jumbotron {
  padding: 10px 25px 10px 25px;
}

.sidebar h3 {
  font-size: 1.3em;
  letter-spacing: -1px;
  text-align: left;
  margin-top: 10px
}

/* footer */

.footer {
}

.footer .jumbotron {
  max-width: 950px;
  width: 100%;
  padding: 20px 35px 20px 35px
}
