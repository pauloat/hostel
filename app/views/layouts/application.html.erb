<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header class='container header'>
      <%= render 'header' %>
    </header>
    <div class='grid'>
      <div class='container main col-2-3'>
        <div class='jumbotron'>
          <%= yield %>
        </div>
      </div>
      <div class='container sidebar col-1-3'>
        <div class='jumbotron'>
          <%= render 'sidebar' %>
        </div>
      <div class='push'></div>
      </div>
      <div class='footer'>
        <%= render 'footer' %>
      </div>
    </div>
  </body>
</html>
